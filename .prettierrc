{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "requirePragma": false,
  "endOfLine": "lf",
  "importOrder": [
    "^react(.*)",
    "^next(.*)",
    "^@atoms/(.*)$",
    "^@molecules/(.*)$",
    "^@organisms/(.*)$",
    "^@templates/(.*)$",
    "^@screens/(.*)$",
    "^@context/(.*)$",
    "^@hooks/(.*)$",
    "^@utils/(.*)$",
    "^@services/(.*)$",
    "^@dictionaries/(.*)$",
    "^@types/(.*)$",
    "^@public/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
